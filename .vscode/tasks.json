{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "gcc debug",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${workspaceFolder}/src/*.c",
                "${workspaceFolder}/example/*.c",
                "-include${workspaceFolder}/example/config/config.h",
                "-I${workspaceFolder}/src/include",
                "-lpthread",
                "-lz",
                "-o",
                "${workspaceFolder}/debug/main"
            ],
            "options": {
                "cwd": "${fileDirname}",
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}